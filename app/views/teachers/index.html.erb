<h1>講師列表</h1>

<table class="table">
    <thead>
        <tr>
            <td>講師姓名</td>
            <td>描述</td>
            <td>處理</td>
        </tr>
    </thead>
    <tbody>
        <% @teachers.each do |teacher| %>
            <tr>
                <td><%= teacher.name %></td>
                <td><%= teacher.description %></td>
                <td>
                    <%= link_to "詳細", teacher_path(teacher), class: "btn btn-default" %>
                    <%= link_to "編輯", edit_teacher_path(teacher), class: "btn btn-default" %>
                    <%= link_to "刪除", teacher_path(teacher), method: "delete", data: { confirm: "確認刪除此課程？" }, class: "btn btn-danger" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to "新增講師", new_teacher_path, class: "btn btn-default" %>